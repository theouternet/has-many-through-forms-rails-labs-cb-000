<%= form_for post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %>
  <%= f.text_area :content %><br>
  Categories<br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  Other Category <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
    <% end %><br>
  <%= f.submit %>
<% end %>


